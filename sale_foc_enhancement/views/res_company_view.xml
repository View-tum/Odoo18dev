<odoo>
    <record id="view_company_form_foc" model="ir.ui.view">
        <field name="name">res.company.form.foc</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[.//field[@name='currency_id']]" position="after">
                <group string="FOC Accounting">
                    <field name="foc_cogs_adjust_account_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
