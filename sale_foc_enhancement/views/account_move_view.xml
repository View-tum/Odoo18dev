<odoo>
    <record id="view_move_form_foc" model="ir.ui.view">
        <field name="name">account.move.form.foc</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Show FOC flag in invoice line list (optional, for visibility) -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='product_uom_id']" position="after">
                <field name="is_foc"/>
            </xpath>
        </field>
    </record>
</odoo>
