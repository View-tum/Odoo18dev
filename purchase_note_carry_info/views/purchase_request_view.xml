<odoo>
  <data>
    <record id="view_purchase_request_form_with_purchase_note" model="ir.ui.view">
      <field name="name">purchase.request.form.purchase_note.page</field>
      <field name="model">purchase.request</field>
      <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
      <field name="arch" type="xml">
        <!-- ปลอดภัย: แทรกในสมุดโน้ตหลัก -->
        <xpath expr="//sheet/notebook" position="inside">
          <page string="Purchase Note" name="purchase_request_note_page">
            <group>
              <field name="purchase_note" nolabel="1" placeholder="Write purchase note for PR..."/>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
