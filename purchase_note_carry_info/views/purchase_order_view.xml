<odoo>
  <data>
    <record id="view_purchase_order_form_with_purchase_note" model="ir.ui.view">
      <field name="name">purchase.order.form.purchase_note.page</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet/notebook" position="inside">
          <page string="Purchase Note" name="purchase_note_page">
            <group>
              <field name="purchase_note" nolabel="1" placeholder="Write purchase note here..."/>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
