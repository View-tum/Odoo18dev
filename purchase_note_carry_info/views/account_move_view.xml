<odoo>
  <data>
    <record id="view_vendor_bill_form_with_purchase_note" model="ir.ui.view">
      <field name="name">account.move.form.purchase_note.page</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet/notebook" position="inside">
          <page string="Purchase Note" name="vendor_bill_purchase_note_page"
                invisible="move_type not in ('in_invoice', 'in_refund')">
            <group>
                <field name="purchase_note" nolabel="1" readonly="1" placeholder="Carried from Purchase Order"/>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
