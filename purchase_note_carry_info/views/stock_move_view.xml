<odoo>
  <data>
    <record id="view_move_form_with_purchase_note" model="ir.ui.view">
      <field name="name">stock.move.form.purchase_note.inline</field>
      <field name="model">stock.move</field>
      <field name="inherit_id" ref="stock.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form//field[@name='product_id']" position="after">
          <group>
            <field name="purchase_note" nolabel="1" readonly="1"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
