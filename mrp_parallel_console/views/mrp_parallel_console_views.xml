<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view สำหรับ Operation ใช้ทั่วไป (inline) -->
    <record id="mrp_parallel_console_routing_wc_tree" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.tree.parallel.console</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name" />
                <field name="workcenter_id" />
                <field name="sequence" />
                <field name="time_cycle" />
                <field name="time_mode" optional="hide" />
                <field name="time_mode_batch" optional="hide" />
                <field name="company_id" invisible="1" />

                <!-- Parallel fields ใน list ตัวนี้ (ถ้าใช้ที่อื่น) -->
                <field name="parallel_mode" />
                <field name="parallel_workcenter_ids" widget="many2many_tags" />
            </list>
        </field>
    </record>

    <!-- Tree view สำหรับ BoM Operations (ไม่ inline, layout เหมือนรูป) -->
    <record id="mrp_parallel_console_routing_wc_tree_dialog" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.tree.parallel.console.dialog</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="arch" type="xml">
            <!-- ไม่มี editable => คลิกแถวไหน / Add a line เด้ง popup เสมอ -->
            <list>
                <!-- Operation ชื่อขั้นตอน -->
                <field name="name" string="Operation" />
                <!-- Bill of Material -->
                <field name="bom_id" string="Bill of Material" />
                <!-- Work Center -->
                <field name="workcenter_id" string="Work Center" />
                <!-- Duration Computation (ใช้ time_mode ของ core) -->
                <field name="time_mode" string="Duration Computation" />
                <!-- Duration (minutes) -->
                <field name="time_cycle" string="Duration (min)" />
                <!-- ถ้าอยากให้มีคอลัมน์ Instruction เพิ่มเติมก็ใช้ note หรือ worksheet_type ต่อได้ -->
                <!-- <field name="worksheet_type" optional="hide"/> -->
            </list>
        </field>
    </record>

    <!-- Wizard: เลือก Machines จาก MPS -->
    <record id="view_mrp_mps_select_machines_wizard" model="ir.ui.view">
        <field name="name">mrp.mps.select.machines.wizard.form</field>
        <field name="model">mrp.mps.select.machines.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Machines" class="o_form_narrow">
                <group>
                    <field name="schedule_id" readonly="1" />
                    <field name="product_id" readonly="1" />
                    <field name="mpc_machine_ids"
                        widget="many2many_tags"
                        options="{'no_create': True, 'no_create_edit': True}" />
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- BoM form: ใช้ tree dialog สำหรับ Operations -->
    <record id="mrp_parallel_console_bom_form_inherit" model="ir.ui.view">
        <field name="name">mrp.bom.form.parallel.console</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='operations']/field[@name='operation_ids']"
                position="attributes">
                <attribute name="context">
                    {
                    'bom_id_invisible': True,
                    'default_bom_id': id,
                    'default_company_id': company_id,
                    'list_view_ref':
                    'mrp_parallel_console.mrp_parallel_console_routing_wc_tree_dialog'
                    }
                </attribute>
                <attribute name="groups">mrp.group_mrp_routings</attribute>
            </xpath>
        </field>
    </record>

    <!-- Actions / Menu สำหรับ Parallel Console -->
    <record id="mrp_parallel_console_action_root" model="ir.actions.client">
        <field name="name">GMP Shop Floor</field>
        <field name="tag">mrp_parallel_console.main_root</field>
        <field name="context">{'search_default_todo': True}</field>
    </record>

    <record id="mrp_parallel_console_action_workorder_console" model="ir.actions.client">
        <field name="name">Workorder Parallel Console</field>
        <field name="tag">mrp_parallel_console.main_console</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_parallel_shopfloor_root"
        name="GMP Shop Floor"
        web_icon="mrp_parallel_console,static/description/icon.png"
        sequence="45"
        groups="base.group_user">
        <menuitem id="menu_parallel_shopfloor_dashboard"
            name="Dashboard"
            action="mrp_parallel_console_action_root"
            sequence="1"
            groups="base.group_user" />
    </menuitem>

    <!-- เพิ่มปุ่ม Console บน MO -->
    <record id="mrp_parallel_console_mrp_production_form_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.parallel.console</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_parallel_console"
                    type="object"
                    string="Console"
                    class="oe_highlight"
                    invisible="1" />
            </xpath>
        </field>
    </record>

    <!-- ซ่อนปุ่ม Console เดิม (ถ้ามี) -->
    <record id="mrp_parallel_console_hide_native_console_button" model="ir.ui.view">
        <field name="name">mrp.production.form.hide.console.button</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//header//button[@name='action_open_parallel_console']"
                position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- Smart button ไป Console -->
    <record id="mrp_parallel_console_mrp_production_form_smart_button" model="ir.ui.view">
        <field name="name">mrp.production.form.parallel.console.smart.button</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button"
                    type="object"
                    name="action_open_parallel_console"
                    icon="fa-cogs">
                    <field string="Workorders" name="workorder_count" widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>

    <!-- Routing Workcenter form: fields สำหรับ Parallel -->
    <record id="mrp_parallel_console_routing_wc_form_inherit" model="ir.ui.view">
        <field name="name">mrp.routing.workcenter.form.parallel.console</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='description']/field[@name='workcenter_id']" position="after">
                <field name="parallel_mode" />
                <field name="parallel_workcenter_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>

    <!-- Wizard: Assign Employees -->
    <record id="view_parallel_console_employee_wizard_form" model="ir.ui.view">
        <field name="name">mrp.parallel.console.employee.wizard.form</field>
        <field name="model">mrp.parallel.console.employee.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Employees">
                <sheet class="o_form_sheet_bg">
                    <div class="oe_title mb-4">
                        <h1 class="d-flex align-items-center">
                            <i class="fa fa-users text-success me-3" style="font-size: 32px;" />
                            <span style="font-weight: 600;">Assign Employees</span>
                        </h1>
                    </div>

                    <div class="alert alert-light border-start border-success border-3 mb-4"
                        style="background: linear-gradient(135deg, #f0fff4 0%, #ffffff 100%);">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-info-circle text-success me-2" style="font-size: 20px;" />
                            <small class="text-muted">Select employees to assign to the selected
                                workorders</small>
                        </div>
                    </div>

                    <group>
                        <label for="employee_ids" string="Employees" class="fw-bold" />
                        <field name="employee_ids"
                            widget="many2many_tags"
                            nolabel="1"
                            options="{'color_field': 'color', 'no_quick_create': True}"
                            placeholder="Select employees..." />
                    </group>
                </sheet>
                <footer class="d-flex justify-content-end gap-2 p-3 bg-light border-top">
                    <button string="Cancel"
                        special="cancel"
                        class="btn btn-secondary px-4 shadow-sm"
                        icon="fa-times" />
                    <button string="Apply"
                        type="object"
                        name="action_apply"
                        class="btn btn-success px-4 shadow-sm"
                        icon="fa-check" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_parallel_console_employee_wizard" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">mrp.parallel.console.employee.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_parallel_console_employee_wizard_form" />
        <field name="target">new</field>
    </record>

    <!-- Wizard: Set Qty & LOT -->
    <record id="view_parallel_console_qty_wizard_form" model="ir.ui.view">
        <field name="name">mrp.parallel.console.qty.wizard.form</field>
        <field name="model">mrp.parallel.console.qty.wizard</field>
        <field name="arch" type="xml">
            <form string="Set Production Quantity &amp; LOT">
                <sheet class="o_form_sheet_bg">
                    <field name="workorder_ids" invisible="1" />

                    <div class="oe_title mb-4">
                        <h1 class="d-flex align-items-center">
                            <i class="fa fa-cubes text-primary me-3" style="font-size: 32px;" />
                            <span style="font-weight: 600;">Set Quantity &amp; LOT</span>
                        </h1>
                    </div>

                    <div class="alert alert-info d-flex align-items-center mb-4 shadow-sm"
                        role="alert"
                        style="border-left: 5px solid #0d6efd; background: linear-gradient(135deg, #e7f3ff 0%, #ffffff 100%);">
                        <i class="fa fa-industry me-3" style="font-size: 28px; color: #0d6efd;" />
                        <div class="flex-grow-1">
                            <label for="production_id" class="text-muted mb-1 d-block"
                                style="font-size: 12px; text-transform: uppercase; letter-spacing: 0.5px;">
                                Manufacturing Order
                            </label>
                            <field name="production_id" readonly="1" nolabel="1" class="fw-bold"
                                style="font-size: 16px;" />
                        </div>
                    </div>

                    <group>
                        <div
                            class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                            <div class="d-flex align-items-center">
                                <i class="fa fa-list-alt text-secondary me-2"
                                    style="font-size: 20px;" />
                                <span class="fw-bold" style="font-size: 16px; color: #495057;">
                                    Workorder Lines
                                </span>
                            </div>
                            <button name="action_open_create_lot_wizard"
                                type="object"
                                string="+ Create LOT"
                                class="btn btn-success btn-sm shadow-sm"
                                icon="fa-plus-circle" />
                        </div>

                        <div class="alert alert-light border-start border-info border-3 mb-3"
                            style="background: #f8f9fa;">
                            <i class="fa fa-info-circle text-info me-2" />
                            <small class="text-muted">This LOT will be applied to all selected
                                workorders</small>
                        </div>

                        <field name="line_ids"
                            nolabel="1"
                            context="{'tree_view_ref': 'mrp_parallel_console.view_parallel_console_qty_wizard_line_tree'}" />
                    </group>
                </sheet>
                <footer class="d-flex justify-content-end gap-2 p-3 bg-light border-top">
                    <button string="Cancel"
                        special="cancel"
                        class="btn btn-secondary px-4 shadow-sm"
                        icon="fa-times" />
                    <button string="Apply"
                        type="object"
                        name="action_apply"
                        class="btn btn-primary px-4 shadow-sm"
                        icon="fa-check" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_parallel_console_qty_wizard" model="ir.actions.act_window">
        <field name="name">Set Qty</field>
        <field name="res_model">mrp.parallel.console.qty.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_parallel_console_qty_wizard_form" />
        <field name="target">new</field>
    </record>

    <record id="view_parallel_console_qty_wizard_line_tree" model="ir.ui.view">
        <field name="name">mrp.parallel.console.qty.wizard.line.tree</field>
        <field name="model">mrp.parallel.console.qty.wizard.line</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="0" delete="0" decoration-info="True">
                <field name="operation_name"
                    string="Workorder"
                    readonly="1"
                    widget="char"
                    decoration-bf="1" />
                <field name="workcenter_id"
                    string="Work Center"
                    readonly="1"
                    widget="badge"
                    decoration-info="1" />
                <field name="planned_qty"
                    string="Planned Qty"
                    readonly="1"
                    widget="float"
                    decoration-muted="1" />
                <field name="recorded_qty"
                    string="Quantity"
                    widget="float"
                    decoration-success="1" />
                <field name="lot_id"
                    string="LOT"
                    groups="stock.group_production_lot"
                    context="{'default_product_id': product_id, 'default_company_id': company_id}"
                    options="{'no_quick_create': True, 'no_create_edit': False}"
                    widget="many2one_badge" />
            </list>
        </field>
    </record>

    <!-- Wizard: Create LOT -->
    <record id="view_parallel_console_create_lot_wizard_form" model="ir.ui.view">
        <field name="name">mrp.parallel.console.create.lot.wizard.form</field>
        <field name="model">mrp.parallel.console.create.lot.wizard</field>
        <field name="arch" type="xml">
            <form string="Create LOT">
                <sheet class="o_form_sheet_bg">
                    <div class="oe_title mb-4">
                        <h1 class="d-flex align-items-center">
                            <i class="fa fa-barcode text-warning me-3" style="font-size: 32px;" />
                            <span style="font-weight: 600;">Create New LOT</span>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <label for="product_id" string="Product" class="fw-bold" />
                            <field name="product_id" readonly="1" nolabel="1" class="text-primary" />
                        </group>
                        <group>
                            <label for="company_id" string="Company" class="fw-bold" />
                            <field name="company_id" readonly="1" nolabel="1" />
                        </group>
                    </group>

                    <group>
                        <label for="lot_name" string="LOT Number" class="fw-bold" />
                        <field name="lot_name"
                            nolabel="1"
                            placeholder="Enter LOT number..."
                            class="o_field_char" />
                    </group>

                    <div class="alert alert-light border-start border-warning border-3 mb-3"
                        style="background: #fffbf0;">
                        <i class="fa fa-info-circle text-warning me-2" />
                        <small class="text-muted">This LOT will be applied to selected workorders</small>
                    </div>

                    <group>
                        <label for="line_ids" string="Apply to Workorders" class="fw-bold" />
                        <field name="line_ids"
                            widget="many2many_tags"
                            nolabel="1"
                            options="{'color_field': 'color', 'no_create': True, 'no_open': True}" />
                    </group>
                </sheet>
                <footer class="d-flex justify-content-end gap-2 p-3 bg-light border-top">
                    <button string="Cancel"
                        special="cancel"
                        class="btn btn-secondary px-4 shadow-sm"
                        icon="fa-times" />
                    <button name="action_create_and_apply"
                        type="object"
                        string="Create &amp; Apply"
                        class="btn btn-warning px-4 shadow-sm"
                        icon="fa-plus" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard: Assign LOT ทั้ง MO -->
    <record id="view_mrp_parallel_assign_lot_wizard" model="ir.ui.view">
        <field name="name">mrp.parallel.assign.lot.wizard.form</field>
        <field name="model">mrp.parallel.assign.lot.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign LOT to Production">
                <sheet>
                    <group>
                        <field name="production_id" readonly="1" />
                        <div class="d-flex align-items-end">
                            <field name="lot_id"
                                class="oe_inline"
                                string="LOT / Serial"
                                domain="[('product_id', '=', product_id)]"
                                options="{'no_create_edit': False}" />
                            <button type="object"
                                name="action_create_lot"
                                class="btn btn-outline-primary ms-2"
                                string="+"
                                title="Create a new LOT" />
                        </div>
                    </group>
                    <label string="This LOT will be applied to all workorders in this MO."
                        for="lot_id"
                        class="text-muted" />
                </sheet>
                <footer>
                    <button string="Confirm"
                        name="action_confirm"
                        type="object"
                        class="btn-primary" />
                    <button string="Cancel"
                        special="cancel"
                        class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <!-- New explicit view for Time Tracking modal in Parallel Console -->
    <record id="view_mrp_workcenter_productivity_tree_parallel_console" model="ir.ui.view">
        <field name="name">mrp.workcenter.productivity.tree.parallel.console</field>
        <field name="model">mrp.workcenter.productivity</field>
        <field name="arch" type="xml">
            <list string="Time Logs" editable="bottom" default_order="date_start desc">
                <field name="date_start" />
                <field name="date_end" />
                <field name="workcenter_id" readonly="1" />
                <field name="employee_id" string="Employee" required="1" />
                <field name="user_id" column_invisible="1" /> <!-- Hide the User field -->
                <field name="loss_id" optional="show" />
                <field name="duration" widget="float_time" sum="Total Duration" />
            </list>
        </field>
    </record>

</odoo>
