<?xml version ="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_fiscal_year_form_view" model="ir.ui.view">
        <field name="name">sh.fiscal.year.form.view</field>
        <field name="model">sh.fiscal.year</field>
        <field name="arch" type="xml">
            <form string="Fiscal Year">
                <header>
                    <button name="create_period" invisible="state != 'draft'" string="Create Monthly Periods" type="object" class="oe_highlight" />
                    <button name="create_period3" invisible="state != 'draft'" string="Create 3 Months Periods" type="object" class="oe_highlight" />
                    <button name="close_fiscal_year_approve" invisible="state != 'waiting'" string="Approve and Close Fiscal Year" type="object" class="oe_highlight" groups="sh_sync_fiscal_year.group_fiscal_year_closing" />
                    <button name="re_open_fiscal_year" invisible="state != 'done'" string="Re-Open Fiscal Year" confirm="Are you sure to Re-open this Fiscal Year ?" type="object" class="oe_highlight" />
                    <button name="re_open_fiscal_year_approve" invisible="state != 'reopen'" string="Approve and Re-Open Fiscal Year" type="object" class="oe_highlight" groups="sh_sync_fiscal_year.group_fiscal_year_re_open" />
                    <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft,done" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="state != 'draft'"/>
                            <field name="code" readonly="state != 'draft'"/>
                            <field name="move_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="date_start" readonly="state != 'draft'"/>
                            <field name="date_end" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Periods">
                            <field name="period_ids" readonly="state != 'draft'">
                                <list>
                                    <field name="name" />
                                    <field name="code" />
                                    <field name="date_start" />
                                    <field name="date_end" />
                                    <field name="special" />
                                    <field name="state" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_fiscal_year_list_view" model="ir.ui.view">
        <field name="name">sh.fiscal.year.list.view</field>
        <field name="model">sh.fiscal.year</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="code" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sh_fiscal_year_action">
        <field name="name">Fiscal Year</field>
        <field name="res_model">sh.fiscal.year</field>
        <field name="view_mode">list,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>

    <record id="sh_fiscal_year_period_form_view" model="ir.ui.view">
        <field name="name">sh.account.period.form.view</field>
        <field name="model">sh.account.period</field>
        <field name="arch" type="xml">
            <form string="Periods">
                <header>
                    <button name="close_period" invisible="state != 'draft'" string="Close Period" confirm="Are you sure to close this period ?" type="object" class="oe_highlight" />
                    <button name="reopen_period" invisible="state != 'done'" string="Re-Open Period" confirm="Are you sure to Re-open this period ?" type="object" class="oe_highlight" />
                    <button name="close_period_approve" invisible="state != 'waiting'" string="Approve and Close this period" type="object" class="oe_highlight" groups="sh_sync_fiscal_year.group_fiscal_year_period_closing" />
                    <button name="reopen_period_approve" invisible="state != 'reopen'" string="Approve and Re-Open this period" type="object" class="oe_highlight" groups="sh_sync_fiscal_year.group_fiscal_year_period_re_open" />
                    <field name="state" widget="statusbar" statusbar_visible="['draft','done']" nolabel="1" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="not 'draft'" />
                            <field name="code" readonly="not 'draft'" />
                            <field name="fiscal_year_id" readonly="not 'draft'"/>
                        </group>
                        <group>
                            <field name="date_start" readonly="not 'draft'" />
                            <field name="date_end" readonly="not 'draft'" />
                            <field name="special" readonly="not 'draft'" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_fiscal_year_period_list_view" model="ir.ui.view">
        <field name="name">sh.account.period.list.view</field>
        <field name="model">sh.account.period</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="code" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="fiscal_year_id" />
                <field name="special" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sh_fiscal_year_period_action">
        <field name="name">Periods</field>
        <field name="res_model">sh.account.period</field>
        <field name="view_mode">list,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>

    <!-- for pivot view -->
    <record id="sh_view_account_invoice_report_search_inherit" model="ir.ui.view">
        <field name="name">account.invoice.report.search.inherit</field>
        <field name="model">account.invoice.report</field>
        <field name="inherit_id" ref="account.view_account_invoice_report_search"/>
        <field name="arch" type="xml">
            <xpath expr="//group/filter[@name='user']" position="after">
                <filter string="Period" name="period" domain="[]" context="{'group_by':'period_id'}"/>
                <filter string="Fiscal Year" name="fiscal_year" domain="[]" context="{'group_by':'fiscal_year'}"/>
            </xpath>
            <xpath expr="//field[@name='invoice_user_id']" position="after">
                <field name="period_id"/>
                <field name="fiscal_year"/>
            </xpath>
        </field>
    </record>

    <menuitem id="sh_fiscal_year_main_menu" name="Periods" parent="account.menu_finance_configuration" sequence="12" />

    <menuitem id="sh_fiscal_year_action_menu" name="Fiscal Year" parent="sh_sync_fiscal_year.sh_fiscal_year_main_menu" sequence="1" action="sh_sync_fiscal_year.sh_fiscal_year_action" />

    <menuitem id="sh_fiscal_year_period_menu" name="Periods" parent="sh_sync_fiscal_year.sh_fiscal_year_main_menu" sequence="2" action="sh_sync_fiscal_year.sh_fiscal_year_period_action" />
</odoo>
