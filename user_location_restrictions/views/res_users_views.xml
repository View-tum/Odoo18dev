<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit user form to add restriction fields -->
    <record id="view_users_form_location_restrictions" model="ir.ui.view">
        <field name="name">res.users.form.location.restrictions</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="inside">
                <group string="Inventory Location Restrictions" groups="user_location_restrictions.group_inventory_location_restricted,stock.group_stock_user">
                    <field name="allowed_warehouse_ids" widget="many2many_tags" options="{'no_create': False}"/>
                    <field name="allowed_location_ids" widget="many2many_tags" options="{'no_create': False}"/>
                    <field name="allowed_picking_type_ids" widget="many2many_tags" options="{'no_create': False}"/>
                    <div class="o_form_label">Enable restrictions by adding the ‘Inventory Location Restricted’ group to this user.</div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>