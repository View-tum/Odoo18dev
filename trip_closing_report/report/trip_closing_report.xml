<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="paperformat_trip_closing" model="report.paperformat">
        <field name="name">Trip Closing Paperformat</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_trip_closing" model="ir.actions.report">
        <field name="name">Trip Closing Report</field>
        <field name="model">trip.closing.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">trip_closing_report.report_trip_closing</field>
        <field name="report_file">trip_closing_report.report_trip_closing</field>
        <field name="print_report_name">
            'TripClosing_%s_%s_%s' % (
                (object.driver_id.name or 'NoDriver').replace('/', '_'),
                (object.date_start or '').strftime('%Y%m%d') if object.date_start else '',
                (object.date_end or '').strftime('%Y%m%d') if object.date_end else '',
            )
        </field>
        <field name="paperformat_id" ref="trip_closing_report.paperformat_trip_closing"/>
        <field name="binding_model_id" ref="model_trip_closing_wizard"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
