<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Limit customer selection to the salesperson set on the order -->
        <record id="view_order_form_limit_customer_by_salesperson" model="ir.ui.view">
            <field name="name">sale.order.form.limit.customer.by.salesperson</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="9990"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="domain">[('active', '=', True)]</attribute>
                </field>
            </field>
        </record>

       
    </data>
</odoo>
