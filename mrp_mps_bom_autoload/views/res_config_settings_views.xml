<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_mrp_mps_autoload" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mrp.mps.autoload</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[.//field[@name='module_mrp_mps']]" position="inside">
                <setting id="mps_bom_autoload" string="MPS BOM Autoload"
                    help="Auto-add BOM components to MPS">
                    <div class="content-group">
                        <div class="row mt16">
                            <label for="mps_bom_single_max_level" class="col-lg-4 o_light_label"
                                string="Single Level Depth" />
                            <field name="mps_bom_single_max_level" class="oe_inline" style="width: 70px;" />
                        </div>
                        <div class="row mt16">
                            <label for="mps_bom_multi_max_level" class="col-lg-4 o_light_label"
                                string="Multi Level Depth" />
                            <field name="mps_bom_multi_max_level" class="oe_inline" style="width: 70px;" />
                        </div>
                        <div class="row mt16">
                            <label for="mps_bom_excluded_category_ids"
                                class="col-lg-4 o_light_label" />
                            <field name="mps_bom_excluded_category_ids"
                                widget="many2many_tags"
                                options="{'no_create': True, 'no_quick_create': True}"
                                class="oe_inline" />
                        </div>
                        <div class="text-muted mt-2">
                            Products in the selected categories (and their children) will be ignored
                            during explosion.
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
