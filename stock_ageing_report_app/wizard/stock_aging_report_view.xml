<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_aging_report_form" model="ir.ui.view">
        <field name="name">stock.aging.report.form</field>
        <field name="model">stock.aging.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Stock Aging Report">
                <group invisible="file != False">
                    <group>
                        <field name="company_id" required="1" />
                        <field name="filter_type"  widget="radio" options="{'horizontal': true}" required="1"/>
                        <field name="product_ids" widget="many2many_tags" string="Product" invisible="filter_type != 'product'" required="filter_type == 'product'"/>
                        <field name="product_categ_ids" widget="many2many_tags" string="Category" invisible="filter_type != 'category'" required="filter_type == 'category'"/>
                    </group>
                    <group>
                        <field name="period_length" required="1" />
                        <field name="date_from" string="From Date" required="1"/>
                    </group>
                </group>
                <group invisible="file != False">
                    <field name="location_ids" widget="many2many_tags" string="Location" required="1"/>
                </group>
                <field name="file" invisible="1"/>
                <separator string="Report Generated" colspan="4" invisible="file == False"/>
                <group invisible="file == False">
                    <field name="document" filename="file" invisible="file == False" readonly="1" string="Here is the Excel Report:"/>
                </group>
                <footer>
                    <button name="print_excel_report" string="Print Excel" type="object" icon="fa-print" class="btn-primary" invisible="file != False"/>
                    <t invisible="file != False">OR</t>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_aging_report" model="ir.actions.act_window">
        <field name="name">Stock Aging Report</field>
        <field name="res_model">stock.aging.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="wizard_stock_aging_report" 
        name="Stock Aging Report" 
        parent="stock.menu_warehouse_report"
        action="action_stock_aging_report"
        sequence='12' />

</odoo>