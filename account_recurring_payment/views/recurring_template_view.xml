<odoo>
    <record id="view_account_recurring_template_list" model="ir.ui.view">
        <field name="name">account.recurring.template.list</field>
        <field name="model">account.recurring.template</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'running'">
                <field name="name" />
                <field name="journal_id" />
                <field name="amount" />
                <field name="next_schedule" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record id="view_account_recurring_template_form" model="ir.ui.view">
        <field name="name">account.recurring.template.form</field>
        <field name="model">account.recurring.template</field>
        <field name="arch" type="xml">
            <form string="Recurring Template">
                <header>
                    <button name="action_compute_schedule" type="object" string="Compute"
                        class="btn-primary" invisible="state not in ('draft','running')" />
                    <button name="action_set_running" type="object" string="Start"
                        class="btn-success" invisible="state != 'draft'" />
                    <button name="action_set_draft" type="object" string="Set to Draft"
                        class="btn-secondary" invisible="state != 'running'" />
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="partner_id"/>
                            <field name="journal_id" />
                            <field name="company_id" readonly="1" />
                            <field name="currency_id" readonly="1" />
                            <field name="generate_journal_as" />
                        </group>
                        <group>
                            <field name="debit_account_id" />
                            <field name="credit_account_id" />
                            <field name="amount" />
                            <field name="recurring_period" />
                            <field name="recurring_interval" />
                            <field name="recurring_invoicing_type" />
                            <field name="start_date" />
                            <field name="end_date" />
                            <field name="next_schedule" readonly="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Remaining Payments">
                            <field name="recurring_line_ids" domain="[('state','=','pending')]"
                                context="{'default_name': name}">
                                <list editable="bottom">
                                    <field name="date" />
                                    <field name="amount" />
                                    <field name="name" />
                                    <field name="state" readonly="1" />
                                    <field name="move_id" readonly="1" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_account_recurring_template_search" model="ir.ui.view">
        <field name="name">account.recurring.template.search</field>
        <field name="model">account.recurring.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="journal_id" />
                <field name="state" />
                <filter name="filter_running" string="Running" domain="[('state','=','running')]" />
                <filter name="filter_draft" string="Draft" domain="[('state','=','draft')]" />
            </search>
        </field>
    </record>

    <record id="action_account_recurring_template" model="ir.actions.act_window">
        <field name="name">Recurring Templates</field>
        <field name="res_model">account.recurring.template</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_account_recurring_template_search" />
    </record>

    <menuitem id="menu_account_recurring_templates"
        name="Recurring Templates"
        parent="account.menu_finance_configuration"
        action="action_account_recurring_template"
        sequence="60" />
</odoo>
