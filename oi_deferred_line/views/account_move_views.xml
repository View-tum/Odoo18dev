<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit_oi_deferred_line" model="ir.ui.view">
            <field name="name">account.move.form.inherit.oi.deferred.line</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='account_id']" position="after">
                    <field name="deferred_journal_id" optional="hide"/>
                    <field name="deferred_account_id" optional="hide"/>
                </xpath>
                <xpath expr="//page[@id='aml_tab']//field[@name='line_ids']/list/field[@name='account_id']" position="after">
                    <field name="deferred_journal_id" optional="hide"/>
                    <field name="deferred_account_id" optional="hide"/>
                </xpath>
                <xpath expr="//group[@name='accounting_info_group']" position="inside">
                    <group string="Deferred Defaults">
                        <field name="deferred_default_journal_id"/>
                        <field name="deferred_default_account_id"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
