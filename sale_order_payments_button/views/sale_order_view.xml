<odoo>
    <record id="view_order_form_inherit_payments_button" model="ir.ui.view">
        <field name="name">sale.order.form.payment.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Smart Button แสดงเฉพาะเมื่อ payment_count > 0 -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_payments"
                        invisible="payment_count == 0"
                        type="object"
                        class="oe_stat_button"
                        disabled="1"
                        icon="fa-credit-card">
                    <field name="payment_count" widget="statinfo" string="Payments" />
                </button>
            </xpath>
            
            <!-- แสดง payment_total_amount แบบปลอดภัย + label ไทย -->
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="payment_total_amount" readonly="1"/>
            </xpath>

        </field>
    </record>
</odoo>
