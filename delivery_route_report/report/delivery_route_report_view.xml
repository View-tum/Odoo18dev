<odoo>
  <record id="view_delivery_route_report_form" model="ir.ui.view">
    <field name="name">delivery.route.report.form</field>
    <field name="model">delivery.route.report</field>
    <field name="arch" type="xml">
      <form string="Route reports">
        <group>
          <field 
              name="route_id"
              required="True"/>
          <field 
              name="include_all_subregions"
              readonly="not route_id"/>
          <field 
              name="subregion_ids"
              domain="[('route_id', '=', route_id)]"
              widget="many2many_tags"
              required="not include_all_subregions and route_id"
              readonly="not route_id"/>
          <field 
              name="date_from"
              required="route_id"
              readonly="not route_id"/>
          <field
              name="date_to"
              required="route_id"
              readonly="not route_id"/>
          <field
              name="report_id"
              domain="[('model_id', '=', 'delivery.route.report')]"
              required="route_id"
              readonly="not route_id"/>
        </group>
        <footer>
          <button string="Confirm" name="action_confirm" type="object" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
