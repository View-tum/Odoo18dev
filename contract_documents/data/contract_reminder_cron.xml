<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Daily reminder check for OPEN contracts -->
        <record id="ir_cron_contract_reminder" model="ir.cron">
            <field name="name">Contract Expiry Reminder - Daily</field>
            <field name="model_id" ref="contract_documents.model_contract_document"/>
            <field name="state">code</field>
            <field name="code">model.send_reminder()</field>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall">2025-09-23 03:05:00</field> <!-- รันทุกวันเวลา 10:05 น. เวลาไทย (UTC+7) -->
        </record>

        <!-- Auto-expire contracts with remaining_days <= 0 -->
        <record id="ir_cron_contract_auto_expire" model="ir.cron">
            <field name="name">Contract Auto-Expire - Daily</field>
            <field name="model_id" ref="contract_documents.model_contract_document"/>
            <field name="state">code</field>
            <field name="code">model.auto_expire_contracts()</field>
            <field name="active">True</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall">2025-09-23 02:30:00</field> <!-- รันก่อน reminder check เวลา 09:30 น. เวลาไทย (UTC+7) -->
        </record>
    </data>
</odoo>
