<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form_inherit_free_item_promo" model="ir.ui.view">
        <field name="name">res.partner.form.free.item.promo</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Sales Note">
                    <group>
                        <field name="customer_credit_rating"/>
                        <field name="shop_type"/>
                        <field name="customer_group"/>
                        <field name="change_delivery_address"/>
                        <field name="memo"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
