<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="account_move_view_form_inherit" model="ir.ui.view">
            <field name="name">account.move.view.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook/page[@name='invoice_tab']/field[@name='invoice_line_ids']/list/field[@name='discount']"
                       position="after">
                    <field name="total_before_discount_line" optional="hide"/>
                    <field name="discount_type" optional="show"/>
                    <field name="discount_value" optional="show"/>
                    <field name="discount_per_unit" optional="hide"/>
                    <field name="discount_total" optional="hide"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
