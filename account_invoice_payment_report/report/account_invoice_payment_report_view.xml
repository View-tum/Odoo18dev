<odoo>
  <!-- Billing Report Form View -->
  <record id="view_account_invoice_payment_report_form" model="ir.ui.view">
    <field name="name">account.invoice.payment.report.form</field>
    <field name="model">account.invoice.payment.report</field>
    <field name="arch" type="xml">
      <form string="Invoice Payment Report">
        <group name="Invoice Payment report">
          <group name="details_filters">
            <separator string="Filter Details"/>
            <field name="salesperson_ids" force_save="1" widget="many2many_tags" required="1"/>
          </group>

          <group name="Date range and report settings">
            <separator string="Date range and report settings"/>
            <label for="select_month" string="Select Period (Month/Year)"/>
            <div class="o_row">
              <field name="select_month" force_save="1" nolabel="1" placeholder="Select Month"/>
              <field name="select_year" force_save="1" nolabel="1" placeholder="Select Year"/>
            </div>
            <field name="date_from" force_save="1" required="1"/>
            <field name="date_to" force_save="1" required="1"/>
            <field name="report_id" force_save="1" required="1"/>
          </group>
        </group>

        <footer>
          <button name="action_print_pdf" string="Print PDF" type="object" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>