<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        /// ===== Search view =====
        <record id="view_product_lot_transfer_search" model="ir.ui.view">
            <field name="name">product_lot_transfer_search</field>
            <field name="model">product.lot.transfer</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="state_draft" string="Draft"
                            domain="[('state', '=', 'draft')]"/>
                    <filter name="state_done" string="Done"
                            domain="[('state', '=', 'done')]"/>
                    <filter name="state_cancel" string="Cancelled"
                            domain="[('state', '=', 'cancel')]"/>
                </search>
            </field>
        </record>

        /// ===== form view (form view) =====
        <record id="view_product_lot_transfer_form" model="ir.ui.view">
            <field name="name">view_product_lot_transfer_form</field>
            <field name="model">product.lot.transfer</field>
            <field name="arch" type="xml">
                <form string="Product &amp; Lot Transfer">
                    <header>
                        <button string="Transfer" type="object" name="action_transfer" class="btn-primary"
                                invisible="state != 'draft'"/>
                        <!--                        <button string="Cancel" class="btn-secondary" special="cancel"/>-->
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1 class="d-flex">
                                <field name="name" invisible="not id" readonly="state != 'draft'"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" invisible="1"/>
                                <field name="warehouse_id" options="{'no_create': True}" required="1"
                                       readonly="state != 'draft'"/>
                                <field name="effective_date" required="1" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="source_location_id" options="{'no_create': True}"
                                       domain="[('usage','=','internal')]" required="1"
                                       readonly="state != 'draft'"/>
                                <field name="dest_location_id" options="{'no_create': True}"
                                       domain="[('usage','=','internal')]" required="1"
                                       readonly="state != 'draft'"/>
                            </group>
                            <group/>
                            <group/>
                            <group>
                                <field name="product_id" options="{'no_create': True}" required="1"
                                       readonly="state != 'draft'"/>
                                <field name="lot_id" required="1" options="{'no_create': True}"
                                       domain="[('product_id', '=', product_id), ('location_id', '=', source_location_id), ('product_qty', '>', 0)]"
                                       readonly="state != 'draft'"/>
                                <field name="qty" required="1" readonly="state != 'draft'"/>
                                <field name="uom_id" required="1" readonly="1"/>
                                <field name="picking_out" readonly="1"/>
                            </group>
                            <group>
                                <field name="dest_product_id" options="{'no_create': True}" required="1"
                                       readonly="state != 'draft'"/>
                                <field name="dest_lot_id" options="{'no_create': True}"
                                       domain="[('product_id','=',dest_product_id)]" readonly="state != 'draft'"/>
                                <field name="dest_lot_name" invisible="dest_lot_id != False"
                                       readonly="state != 'draft'"/>
                                <field name="picking_in" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        /// ===== list view (list view) =====
        <record id="view_product_lot_transfer_list" model="ir.ui.view">
            <field name="name">view_product_lot_transfer_list</field>
            <field name="model">product.lot.transfer</field>
            <field name="arch" type="xml">
                <list string="Product Lot Transfer">
                    <field name='state' optional="show"/>
                    <field name="name" optional="show"/>
                    <field name="warehouse_id" optional="show"/>
                    <field name="effective_date" optional="show"/>
                    <field name="product_id" optional="show"/>
                    <field name='source_location_id' optional='show'/>
                    <field name='lot_id' optional='show'/>
                    <field name='qty' optional='show'/>
                    <field name="dest_product_id" optional="show"/>
                    <field name='dest_location_id' optional='show'/>
                    <field name='dest_lot_id' optional='show'/>
                    <field name='dest_lot_name' optional='show'/>
                </list>
            </field>
        </record>

        ///====== Action Menu ======
        <record id="action_product_lot_transfer" model="ir.actions.act_window">
            <field name="name">Product &amp; Lot Transfer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.lot.transfer</field>
            <field name="context">{'search_default_state_draft': 1, 'search_default_state_done': 1}</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new data.
                </p>
            </field>
        </record>


        ///====== Menu Link to Action ======
        <menuitem id="main_menu_product_lot_transfer"
                  name="Product &amp; Lot Transfer"
                  parent="stock.menu_stock_warehouse_mgmt"
                  sequence="96"/>

        <menuitem id="menu_product_lot_transfer"
                  name="Product &amp; Lot Transfer"
                  action="action_product_lot_transfer"
                  parent="main_menu_product_lot_transfer"
                  sequence="10"/>

    </data>
</odoo>