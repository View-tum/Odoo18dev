<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="approval_settings_purchase_request" model="approval.settings" forcecreate="False">
        <field name="model_id" ref="model_purchase_request"/>
    </record>

    <record id="pr_approval_to_approve" model="approval.config" forcecreate="False">
        <field name="model_id" ref="model_purchase_request"/>
        <field name="state">to approve</field>
        <field name="name">To Approve</field>
        <field name="sequence">10</field>
        <field name="group_ids" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
        <field name="condition">True</field>
        <field name="schedule_activity" eval="True"/>
    </record>

    <record id="pr_approval_approved" model="approval.config" forcecreate="False">
        <field name="model_id" ref="model_purchase_request"/>
        <field name="state">approved</field>
        <field name="name">Approved</field>
        <field name="sequence">11</field>
        <field name="group_ids" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
        <field name="condition">True</field>
        <field name="schedule_activity" eval="True"/>
    </record>

    <record id="pr_approval_in_progress" model="approval.config" forcecreate="False">
        <field name="model_id" ref="model_purchase_request"/>
        <field name="state">in_progress</field>
        <field name="name">In progress</field>
        <field name="sequence">12</field>
        <field name="group_ids" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
        <field name="condition">True</field>
        <field name="schedule_activity" eval="True"/>
    </record>

</odoo>