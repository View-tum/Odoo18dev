<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_payment_register_form_cheque" model="ir.ui.view">
            <field name="name">account.payment.register.form.cheque</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <field name="partner_bank_id" position="after">
                    <field name="is_cheque_incoming" invisible="1"/>
                    <field name="is_cheque_outgoing" invisible="1"/>
                    <field name="is_cheque_already_added_ids" invisible="1"/>
                </field>
                <xpath expr="//footer" position="before">
                    <group string="Cheque" name="outbound_cheque" invisible="payment_type != 'outbound' or is_cheque_outgoing == False">
                        <field name="wizard_outbound_cheque_lines" context="{'default_journal_id': journal_id}" nolabel="1">
                            <list editable="bottom">
                                <field name="journal_id" required="1" options="{'no_create': True}" column_invisible="0"/>
                                <field name="cheque_id" required="1" options="{'no_create': True}"/>
                                <field name="bank_account_id" required="1"/>
                                <field name="branch"/>
                                <field name="date" required="1"/>
                                <field name="ac_payee" widget="boolean_toggle"/>
                                <field name="amount" required="1" sum="Total"/>
                                <field name="remarks"/>
                            </list>
                        </field>
                    </group>
                    <group string="Cheque" name="inbound_cheque" invisible="payment_type != 'inbound' or is_cheque_incoming == False">
                        <field name="wizard_inbound_cheque_lines" context="{'default_journal_id': journal_id}" nolabel="1">
                            <list editable="bottom">
                            	<field name="journal_id"/>
                                <field name="cheque_id" required="1"/>
                                <field name="bank_account_id" required="1"/>
                                <field name="branch"/>
                                <field name="date" required="1"/>
                                <field name="ac_payee" widget="boolean_toggle"/>
                                <field name="amount" required="1" sum="Total"/>
                                <field name="remarks"/>
                            </list>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>