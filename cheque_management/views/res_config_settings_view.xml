<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Cheque setting form view -->
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.cheque.management</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Cheque" string="Cheque" name="cheque_management">
                        <block title="Cheque" name="cheque_management">
                            <div class="row mt16 o_settings_container" name="cheque_setting_container">
                                <div class="col-12 col-lg-6 o_setting_box" id="is_reverse_cheque_entry">
                                    <div class="o_setting_left_pane">
                                        <field name="is_reverse_cheque_entry"/>
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <label for="is_reverse_cheque_entry"/>
                                        <div class="text-muted">
                                            If Ticked, when validate system auto create new payment entry for reverse cheque.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>

        <record id="action_cheque_management_config" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="res_config_settings_view_form"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'cheque_management'}</field>
        </record>

        <menuitem id="menu_cheque_management_config" 
                name="Settings" 
                parent="cheque_management.menu_cheque_configuration" 
                sequence="1" 
                action="action_cheque_management_config" 
                groups="base.group_system"/>

    </data>
</odoo>
