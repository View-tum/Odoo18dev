<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Smartbutton Action Of Outbound Cheque -->
    <record id="action_open_outbound_cheque_lines" model="ir.actions.act_window">
        <field name="name">Cheque</field>
        <field name="res_model">outbound.cheque.lines</field>
        <field name="view_mode">list</field>
        <field name="domain">[('payment_id', '=', active_id)]</field>
        <field name="context">{'default_payment_id': active_id, 'create': 0, 'edit': 0}</field>
    </record>

    <!-- Smartbutton Action Of Inbound Cheque -->
    <record id="action_open_inbound_cheque_lines" model="ir.actions.act_window">
        <field name="name">Cheque</field>
        <field name="res_model">inbound.cheque.lines</field>
        <field name="view_mode">list</field>
        <field name="domain">[('payment_id', '=', active_id)]</field>
        <field name="context">{'default_payment_id': active_id, 'create': 0, 'edit': 0}</field>
    </record>

    <record id="view_account_payment_form_inherit_account_cheque_management" model="ir.ui.view">
        <field name="name">account.payment.form.account.cheque.management</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/div[@name='button_box']" position="inside">
                <button type="object" name="action_view_cheques" class="oe_stat_button" icon="fa-credit-card-alt" invisible="count_cheque_inbound_outbound == 0">
                    <field name="count_cheque_inbound_outbound" widget="statinfo" string="Cheques"/>
                    <field name='cheque_inbound_outbound_ids' invisible="1"/>
                </button>
                <!-- <button name="%(action_open_outbound_cheque_lines)d" type="action" class="oe_stat_button" icon="fa-bars" invisible="outbound_cheque_lines_count == 0">
                    <field name="outbound_cheque_lines_count" widget="statinfo" string="Cheque Line"/>
                </button>
                <button name="%(action_open_inbound_cheque_lines)d" type="action" class="oe_stat_button" icon="fa-bars" invisible="inbound_cheque_lines_count == 0">
                    <field name="inbound_cheque_lines_count" widget="statinfo" string="Cheque Line"/>
                </button> -->
            </xpath>
        </field>
    </record>

    <!-- Outbound Cheque List View -->
    <record id="outbound_cheque_lines_list_view" model="ir.ui.view">
        <field name="name">outbound.cheque.lines.list.view</field>
        <field name="model">outbound.cheque.lines</field>
        <field name="arch" type="xml">
            <list string="Cheque">
                <field name="journal_id" required="1" options="{'no_create': True}" column_invisible="1"/>
                <field name="cheque_id" required="1" options="{'no_create': True}"/>
                <field name="bank_account_id" required="1"/>
                <field name="branch"/>
                <field name="date" required="1"/>
                <field name="ac_payee" widget="boolean_toggle"/>
                <field name="amount" required="1"/>
                <field name="remarks"/>
            </list>
        </field>
    </record>

    <!-- Outbound Cheque Form View -->
    <record id="outbound_cheque_lines_form_view" model="ir.ui.view">
        <field name="name">outbound.cheque.lines.form.view</field>
        <field name="model">outbound.cheque.lines</field>
        <field name="arch" type="xml">
            <form string="Cheque">
                <sheet>
                    <group>
                        <group>
                            <field name="cheque_id" required="1" options="{'no_create': True}"/>
                            <field name="bank_account_id" required="1"/>
                            <field name="branch"/>
                        </group>
                        <group>
                            <field name="date" required="1"/>
                            <field name="ac_payee" widget="boolean_toggle"/>
                            <field name="amount" required="1"/>
                            <field name="remarks"/>
                        </group>
                    </group>
                </sheet>
                <chatter reload_on_attachment="True"/>
            </form>
        </field>
    </record>

    <!-- Inbound Cheque List View -->
    <record id="inbound_cheque_lines_list_view" model="ir.ui.view">
        <field name="name">inbound.cheque.lines.list.view</field>
        <field name="model">inbound.cheque.lines</field>
        <field name="arch" type="xml">
            <list string="Cheque">
                <field name="cheque_id" required="1"/>
                <field name="bank_account_id" required="1"/>
                <field name="branch"/>
                <field name="date" required="1"/>
                <field name="ac_payee" widget="boolean_toggle"/>
                <field name="amount" required="1"/>
                <field name="remarks"/>
            </list>
        </field>
    </record>

    <!-- Inbound Cheque Form View -->
    <record id="inbound_cheque_lines_form_view" model="ir.ui.view">
        <field name="name">inbound.cheque.lines.form.view</field>
        <field name="model">inbound.cheque.lines</field>
        <field name="arch" type="xml">
            <form string="Cheque">
                <sheet>
                    <group>
                        <group>
                            <field name="cheque_id" required="1"/>
                            <field name="bank_account_id" required="1"/>
                            <field name="branch"/>
                        </group>
                        <group>
                            <field name="date" required="1"/>
                            <field name="ac_payee" widget="boolean_toggle"/>
                            <field name="amount" required="1"/>
                            <field name="remarks"/>
                        </group>
                    </group>
                </sheet>
                <chatter reload_on_attachment="True"/>
            </form>
        </field>
    </record>

</odoo>