<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Account Journal Form View -->
    <record id="account_journal_form_view_inherit_cheque" model="ir.ui.view">
        <field name="name">account.journal.form.view.inherit.cheque</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='inbound_payment_method_line_ids']" position="after">
                <group>
                    <group>
                        <field name="is_cheque_incoming"/>
                    </group>
                    <group></group>
                </group>
            </xpath>
            <xpath expr="//group[@name='outgoing_payment']" position="after">
                <group>
                    <group>
                        <field name="is_cheque_outgoing"/>
                    </group>
                    <group></group>
                </group>
                <group>
                    <group invisible="is_cheque_outgoing == False" string="Report Cheque" name="report_cheque">
                        <field name="dynamic_cheque_id" widget="many2many_tags"/>
                    </group>
                    <group></group>
                </group>
            </xpath>
            <xpath expr="//field[@name='inbound_payment_method_line_ids']/list/field[@name='name']" position="after">
                <field name="is_cheque_incoming" column_invisible="True"/>
                <field name="is_cheque_incoming_line" readonly="is_cheque_incoming == False"/>
            </xpath>
            <xpath expr="//field[@name='inbound_payment_method_line_ids']/list/field[@name='payment_account_id']" position="after">
                <field name="incoming_cheque_account_id" readonly="is_cheque_incoming_line == False"/>
            </xpath>
            <xpath expr="//field[@name='outbound_payment_method_line_ids']/list/field[@name='name']" position="after">
                <field name="is_cheque_outgoing" column_invisible="True"/>
                <field name="is_cheque_outgoing_line" readonly="is_cheque_outgoing == False"/>
            </xpath>
            <xpath expr="//field[@name='outbound_payment_method_line_ids']/list/field[@name='payment_account_id']" position="after">
                <field name="outgoing_cheque_account_id" readonly="is_cheque_outgoing_line == False"/>
            </xpath>
        </field>
    </record>

</odoo>
