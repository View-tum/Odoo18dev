<odoo>
    <!-- Plastic MPS action -->
    <record id="action_mrp_mps_plastic" model="ir.actions.client">
        <field name="name">Plastic MPS</field>
        <field name="res_model">mrp.production.schedule</field>
        <field name="tag">mrp_mps_client_action_by_type</field>
        <field name="context">
            {"manufacturing_type": "plastic"}
        </field>
    </record>

    <!-- Pharma MPS action -->
    <record id="action_mrp_mps_pharma" model="ir.actions.client">
        <field name="name">Pharma MPS</field>
        <field name="res_model">mrp.production.schedule</field>
        <field name="tag">mrp_mps_client_action_by_type</field>
        <field name="context">
           {"manufacturing_type": "pharma"}
        </field>
    </record>

    <!-- Menus under Master Production Schedule -->
    <menuitem id="menu_mrp_mps_plastic"
              name="Plastic MPS"
              parent="mrp_mps.mrp_mps_menu_planning"
              action="action_mrp_mps_plastic"
    />

    <menuitem id="menu_mrp_mps_pharma"
              name="Pharma MPS"
              parent="mrp_mps.mrp_mps_menu_planning"
              action="action_mrp_mps_pharma"
    />
</odoo>
