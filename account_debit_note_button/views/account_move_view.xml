<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_debit_button" model="ir.ui.view">
        <field name="name">account.move.form.inherit.debit.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_reverse']" position="after">
                <button name="action_debit_note"
                    string="Debit Note"
                    type="object"
                    groups="account.group_account_invoice"
                    invisible="state != 'posted' or move_type not in ('out_invoice', 'in_invoice')" />
            </xpath>
        </field>
    </record>

    <record id="action_move_out_debit_note_type" model="ir.actions.act_window">
        <field name="name">Debit Notes</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('move_type', '=', 'out_invoice'), ('debit_origin_id', '!=', False)]</field>
        <field name="context">{'default_move_type': 'out_invoice'}</field>
        <field name="view_id" ref="account.view_out_invoice_tree" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a debit note
            </p>
        </field>
    </record>

    <menuitem id="menu_action_move_out_debit_note_type"
        name="Debit Notes"
        action="action_move_out_debit_note_type"
        parent="account.menu_finance_receivables"
        sequence="2" />
</odoo>
