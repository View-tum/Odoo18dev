<odoo>
    <record id="purchase_request_vendor_add" model="ir.ui.view">
    <field name="name">purchase.request.vendor.add</field>
    <field name="model">purchase.request</field>
    <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='requested_by']" position="after">
            <field name="vendor" domain="[('supplier_rank','>',0)]"/>
            <field name="vendor_currency_id" readonly="1"/>
        </xpath>
    </field>
    </record>


    <record id="pr_line_make_po" model="ir.ui.view">
        <field name="name">pr.line.make.po</field>
        <field name="model">purchase.request.line.make.purchase.order</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_line_make_purchase_order"/>
    </record>

    <record id="pr_unit_price" model="ir.ui.view">
        <field name="name">pr.unit.price</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_required']" position="after">
                <field name="unit_cost"/>
            </xpath>
        </field>
    </record>
</odoo>
