<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="set_mrp_routing_workcenter_list_view" model="ir.ui.view">
            <field name="name">set.mrp.routing.orkcenter.list.view</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//list/field[@name='time_cycle']"
                       position="replace">
                    <field name="time_cycle" digits="[12,12]" string="Duration (minutes)"/>
                </xpath>
            </field>
        </record>

        <record id="set_mrp_routing_workcenter_form_view" model="ir.ui.view">
            <field name="name">set.mrp.routing.orkcenter.form_.view</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group[@name='workorder']/div[2]/field[@name='time_cycle_manual']"
                       position="replace">
                    <field name="time_cycle_manual" digits="[12,12]" class="oe_inline"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
