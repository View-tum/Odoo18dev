<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_customers_payment_collection_report_form" model="ir.ui.view">
        <field name="name">account.customers.payment.collection.report.form</field>
        <field name="model">account.customers.payment.collection.report</field>
        <field name="arch" type="xml">
            <form string="รายงานการขายประจำวัน">
                <group>
                    <field name="salesperson_id" required="True"/>
                    <field name="date_from" required="salesperson_id" readonly="not salesperson_id"/>
                    <field name="date_to" required="salesperson_id" readonly="not salesperson_id"/>
                </group>
                <footer>
                    <button string="Export Excel" name="action_excel" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
