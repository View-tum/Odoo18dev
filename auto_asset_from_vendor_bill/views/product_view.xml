<!-- views/product_template_views.xml -->
<odoo>
  <record id="view_product_template_form_inherit_asset" model="ir.ui.view">
    <field name="name">product.template.form.asset.category</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <!-- Place AFTER the Receivables group inside the Accounting tab -->
      <xpath expr="//group[@name='accounting']" position="after">
        <group string="Asset Model" groups="account.group_account_user">
          <field name="asset_model_id"/>
        </group>
      </xpath>
    </field>
  </record>
  
  
  <!-- Variant form: add Asset Model group in Accounting tab -->
<odoo>
  <record id="view_product_variant_form_inherit_asset" model="ir.ui.view">
    <field name="name">product.product.form.asset.model</field>
    <field name="model">product.product</field>
    <!-- Commonly present when variants are enabled -->
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
      <!-- Append at the end of the Accounting tab -->
      <xpath expr="//group[@name='accounting']" position="after">
        <group string="Asset Model" groups="account.group_account_user">
          <field name="asset_model_id"/>
        </group>
      </xpath>
    </field>
  </record>

 

  
</odoo>

</odoo>
