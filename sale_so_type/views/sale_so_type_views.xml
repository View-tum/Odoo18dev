<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_sequence_type_list" model="ir.ui.view">
        <field name="name">sale.sequence.type.list</field>
        <field name="model">sale.sequence.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="market_scope" optional="show"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_sale_sequence_type_form" model="ir.ui.view">
        <field name="name">sale.sequence.type.form</field>
        <field name="model">sale.sequence.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <field name="market_scope" widget="radio"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sale_sequence_type" model="ir.actions.act_window">
        <field name="name">SO Types</field>
        <field name="res_model">sale.sequence.type</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_sale_sequence_type" name="SO Types" parent="sale.menu_sale_config" action="action_sale_sequence_type" sequence="500"/>
</odoo>
