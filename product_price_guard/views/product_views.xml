<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_price_guard" model="ir.ui.view">
        <field name="name">product.template.form.inherit.price.guard</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']/group[@name='purchase']" position="inside">
                <group string="Price Guard">
                    <group>
                        <field name="cost_per_unit" />
                        <field name="upcharge_percent" />
                        <field name="final_allowed_price" readonly="1" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>