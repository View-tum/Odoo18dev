<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_form_customer_ref_context" model="ir.ui.view">
            <field name="name">sale.order.form.customer.ref.context</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="context">{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True, 'show_sale_ref_name': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                    <attribute name="context">{'default_type':'invoice', 'show_address': False, 'show_vat': False, 'default_parent_id': partner_id, 'show_sale_ref_name': False}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="context">{'default_type':'delivery', 'show_address': False, 'show_vat': False, 'default_parent_id': partner_id, 'show_sale_ref_name': False}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
