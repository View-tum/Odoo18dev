<odoo>
  <record id="view_product_form_approval" model="ir.ui.view">
    <field name="name">product.template.form.approval</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <header position="inside">
        <button name="action_approve" type="object" string="Approve"
                class="oe_highlight"
                invisible="approval_state == 'approved'"
                groups="account.group_account_manager"/>
        <field name="approval_state" widget="statusbar" statusbar_visible="draft,approved"/>
      </header>
      <xpath expr="//form" position="attributes">
           <attribute name="readonly">is_lock</attribute>
     </xpath>
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Approval">
          <group>
            <field name="approval_state" readonly="1"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
