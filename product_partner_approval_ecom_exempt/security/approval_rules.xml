<odoo>
  <!-- Optional: Hide draft products from normal internal users (they will still be visible to Product/Accounting managers) -->
  <record id="product_rule_approved_only_for_users" model="ir.rule">
    <field name="name">Product Templates - Only approved for internal users</field>
    <field name="model_id" ref="product.model_product_template"/>
    <field name="domain_force">[('approval_state','=','approved')]</field>
    <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
  </record>

  <!-- Exempt Product Managers and Accounting Managers from the rule by giving them full access (no rule here; they see everything) -->
  <!-- Note: Record rules are additive; since we attach the above rule only to base.group_user, 
       users with only that group are filtered. Product and Accounting managers aren't affected. -->
</odoo>
