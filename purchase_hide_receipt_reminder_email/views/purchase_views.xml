<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_order_form_inherit_hide_reminder" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.hide.reminder</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//label[@for='receipt_reminder_email']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    </xpath>

                <xpath expr="//div[@name='reminder']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>
    </data>
</odoo>