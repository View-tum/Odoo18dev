<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_analysis_report_config_tree" model="ir.ui.view">
        <field name="name">sale.analysis.report.config.tree</field>
        <field name="model">sale.analysis.report.config</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="filter_by"/>
                <field name="report_id"/>
            </list>
        </field>
    </record>

    <record id="view_sale_analysis_report_config_form" model="ir.ui.view">
        <field name="name">sale.analysis.report.config.form</field>
        <field name="model">sale.analysis.report.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="filter_by"/>
                        </group>
                        <group>
                            <field name="report_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_sale_analysis_report_config" model="ir.actions.act_window">
        <field name="name">Report Configuration</field>
        <field name="res_model">sale.analysis.report.config</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_sale_analysis_report_config" name="ตั้งค่ารายงาน (Template)" parent="menu_reporting_analysis_report" sequence="30" action="action_sale_analysis_report_config" groups="base.group_system"/>
</odoo>