<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inventory_stock_count_report_wizard_view_form" model="ir.ui.view">
        <field name="name">inventory.stock.count.report.wizard.form</field>
        <field name="model">inventory.stock.count.report.wizard</field>
        <field name="arch" type="xml">
            <form string="รายงานตรวจนับสต็อก">
                <sheet>
                    <group>
                        <group>
                            <field name="location_ids" widget="many2many_tags" options="{'no_create_edit': True}" required="1" domain="[('usage', '=', 'internal')]" />
                            <field name="include_child_locations" />
                            <field name="only_on_hand" />
                            <field name="mode" />
                            <field name="show_system_qty" readonly="1" invisible="1" />
                        </group>
                        <group>
                            <field name="show_uom" />
                            <field name="sort_by" />
                            <field name="page_break_by_location" invisible="1" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="View" type="object" name="action_view_html" class="btn-primary" />
                    <button string="Print PDF" type="object" name="action_print_pdf" class="btn-secondary" />
                    <button string="Export Excel" type="object" name="action_export_xlsx" class="btn-secondary" />
                    <button string="Close" special="cancel" class="btn btn-link" />
                </footer>
            </form>
        </field>
    </record>

    <record id="inventory_stock_count_report_wizard_action" model="ir.actions.act_window">
        <field name="name">รายงานตรวจนับสต็อก</field>
        <field name="res_model">inventory.stock.count.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="inventory_stock_count_report_wizard_view_form" />
        <field name="target">new</field>
    </record>

    <menuitem id="inventory_stock_count_report_menu" name="รายงานตรวจนับสต็อก" parent="stock.menu_warehouse_report" action="inventory_stock_count_report_wizard_action" sequence="90" />
</odoo>
