<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_order_form_inherit_pr_button" model="ir.ui.view">
    <field name="name">purchase.order.form.pr.smart.button</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet//div[@name='button_box']" position="inside">
        <button
          name="action_view_prs"
          type="object"
          class="oe_stat_button"
          invisible="pr_count == 0"
          icon="fa-shopping-cart"
        >
          <field name="pr_count" widget="statinfo" string="Purchase Requests"/>
        </button>
      </xpath>
    </field>
  </record>
</odoo>
