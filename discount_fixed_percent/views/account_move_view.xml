<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account_move_view_form_inherit" model="ir.ui.view">
            <field name="name">account.move.view.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='discount']" position="before">
                    <field name="fixed_discount" optional="show"/>
                    <field name="percent_discount" optional="show"/>
                </xpath>
                <!--<xpath expr="//field[@name='invoice_line_ids']/list/field[@name='discount']" position="attributes">
                    <attribute name="optional">hide</attribute>
                    <attribute name="column_invisible">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>-->
            </field>
        </record>
    </data>
</odoo>