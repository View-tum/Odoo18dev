<odoo>
    <record id="purchase_request_view_form_inherit_fixed_discount" model="ir.ui.view">
        <field name="name">purchase.request.form.inherit.fixed.discount</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/list/field[@name='estimated_cost']" position="before">
                <field name="fixed_discount" optional="show"/>
                <field name="percent_discount" optional="show"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']/list/field[@name='discount']" position="attributes">
                <attribute name="optional">hide</attribute>
                <attribute name="column_invisible">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>