<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit_mfg_lead_time" model="ir.ui.view">
        <field name="name">product.template.form.inherit.mfg.lead.time</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[field[@name='sale_delay']]" position="after">
                <label for="mfg_lead_time"/>
                <div>
                    <field name="mfg_lead_time" class="oe_inline" style="vertical-align:baseline"/>
days
                </div>
            </xpath>
        </field>
    </record>
</odoo>