<odoo>
  <data>
    <record id="view_move_form_hide_print_pdf" model="ir.ui.view">
      <field name="name">account.move.form.hide.print.pdf</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header//button[@name='action_print_pdf' and contains(@class,'oe_highlight')]" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//header//button[@name='action_print_pdf' and not(contains(@class,'oe_highlight'))]" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
