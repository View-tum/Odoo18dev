<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_default_contact_name" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.default.contact.name</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//span[@name='address_name']" position="before">
                <field name="default_contact_name" placeholder="Default contact name"/>
            </xpath>
        </field>
    </record>
</odoo>
