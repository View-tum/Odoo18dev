<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_inventory_stock_card_wizard_form" model="ir.ui.view">
        <field name="name">inventory.stock.card.wizard.form</field>
        <field name="model">inventory.stock.card.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Stock Card" create="false" edit="false">
                <group>
                    <group>
                        <field name="company_id"/>
                        <field name="product_ids" widget="many2many_tags"/>
                        <field name="location_id"/>
                        <field name="include_child_locations"/>
                    </group>
                    <group>
                        <field name="period_id" options="{'no_create': True}"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="at_date_only"/>
                        <separator string="Display Options"/>
                        <field name="show_doc"/>
                        <field name="show_partner"/>
                        <field name="show_lot"/>
                    </group>
                </group>
                <footer>
                    <button name="action_view_html" type="object" class="btn btn-primary" string="View"/>
                    <button name="action_export_pdf" type="object" class="btn btn-secondary" string="Export PDF"/>
                    <button name="action_export_xlsx" type="object" class="btn btn-secondary" string="Export XLSX"/>
                    <button special="cancel" string="Cancel" class="btn btn-link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_inventory_stock_card_wizard" model="ir.actions.act_window">
        <field name="name">Stock Card</field>
        <field name="res_model">inventory.stock.card.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_inventory_stock_card_root" name="รายงานสินค้าคงคลัง" parent="stock.menu_warehouse_report" action="action_inventory_stock_card_wizard" sequence="95"/>
</odoo>