<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_cus_view_form" model="ir.ui.view">
        <field name="name">sale.order.cus</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- ✅ เพิ่มฟิลด์ใหม่ด้านหลัง field tag_ids -->
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="tag_id1"/>
                <field name="tag_id2"/>
                <field name="tag_id3"/>
                <field name="tag_id4"/>
                <field name="warranty"/>
                <field name="transports"/>
                <field name="commision"/>

            </xpath>
            <!-- ✅ เพิ่มฟิลด์ใหม่ใน list view (tree) ของ order_line -->
            <xpath expr="//field[@name='order_line']/list/field[@name='price_subtotal']" position="after">
                <field name="commision" optional="hide"/>
                <field name="calculate" optional="hide"/>
            </xpath>

        </field>
    </record>
</odoo>
