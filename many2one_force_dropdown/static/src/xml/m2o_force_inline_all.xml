<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
  <!-- Force the dropdown/autocomplete UI even on small devices -->
  <t t-name="many2one_force_dropdown.Many2XAutocomplete" t-inherit="web.Many2XAutocomplete" t-inherit-mode="primary">
    <xpath expr="//div[@class='o_input_dropdown']" position="replace">
      <div class="o_input_dropdown" t-ref="autocomplete_container">
        <AutoComplete
          value="props.value"
          id="props.id"
          placeholder="props.placeholder"
          sources="sources"
          autoSelect="props.autoSelect"
          onSelect.bind="onSelect"
          onInput.bind="onInput"
          onChange.bind="onChange"
          dropdown="props.dropdown"
          autofocus="props.autofocus"
          resetOnSelect="props.value === ''"
          onCancel.bind="onCancel"
        />
        <span class="o_dropdown_button" />
      </div>
    </xpath>
  </t>
</templates>
