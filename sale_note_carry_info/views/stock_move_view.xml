<odoo>
    <data>
        <record id="view_move_form_with_note" model="ir.ui.view">
            <field name="name">stock.move.form.note</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Insert a group with Note after product field to avoid header/state issues -->
                <xpath expr="//form//field[@name='product_id']" position="after">
                    <group>
                        <field name="sale_note" nolabel="1" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
