<odoo>
    <record id="view_account_stock_card_rng8_form" model="ir.ui.view">
        <field name="name">account.stock.card.rng8.form</field>
        <field name="model">account.stock.card.rng8</field>
        <field name="arch" type="xml">
            <form string="Stock Card Report (RNG8)">
                <group>
                    <group>
                        <field name="product_category_id" widget="radio" options="{'no_create': True, 'horizontal': false}"/>
                        <field name="company_id" invisible="1"/>
                    </group>

                    <group>
                        <field name="location_id" options="{'no_create': True}"/>
                        <field name="include_child_locations"/>
                        <label for="date_from" string="Date Range"/>
                        <div class="o_row">
                            <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}"/>
                            <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                            <field name="date_to" widget="daterange" options="{'related_start_date': 'date_from'}"/>
                        </div>
                    </group>
                </group>

                <footer>
                    <button name="action_export_xlsx" type="object" string="Export Excel" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>