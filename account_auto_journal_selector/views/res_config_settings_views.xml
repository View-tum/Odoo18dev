<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="account_auto_journal_selector_res_config_settings_view" model="ir.ui.view">
    <field name="name">account.auto.journal.selector.settings</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <app name="account" position="inside">
        <block title="Automated Journal Selection" name="account_auto_journal_selector_block">
          <setting>
            <field name="auto_local_journal_id"/>
          </setting>
          <setting>
            <field name="auto_foreign_journal_id"/>
          </setting>
        </block>
      </app>
    </field>
  </record>
</odoo>
