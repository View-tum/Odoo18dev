<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit_no_numbers" model="ir.ui.view">
        <field name="name">product.template.form.inherit.no.numbers</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='default_code']" position="after">
                <div name="pcn_ref_inline" invisible="product_variant_count > 1">

                    <div
                        style="display:flex;align-items:center;gap:8px;flex-wrap:nowrap;margin-top:4px;">
                        <field name="ref_seg1" nolabel="1" placeholder="AA" style="width:4.2em" />
                        <span>-</span>
                        <field name="ref_seg2" nolabel="1" placeholder="BBB" style="width:5.2em" />
                        <span>-</span>
                        <field name="ref_seg3" nolabel="1" placeholder="CC" style="width:4.2em" />
                        <span>-</span>
                        <field name="ref_seg4" nolabel="1" placeholder="12345" style="width:6em" />
                    </div>
                    <group name="pcn_ref_note_group" col="2">
                        <label for="old_default_code" string="Reference Note" />
                        <field name="old_default_code"
                            nolabel="1"
                            placeholder="Enter reference code..." />
                        <label for="old_default_product" string="Reference Product" />
                        <field name="old_default_product"
                            nolabel="1"
                            placeholder="Enter reference product..." />
                    </group>

                </div>
            </xpath>


        </field>
    </record>
</odoo>
