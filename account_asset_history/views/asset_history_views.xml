<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_asset_history_record_list" model="ir.ui.view">
        <field name="name">asset.history.record.list</field>
        <field name="model">asset.history.record</field>
        <field name="arch" type="xml">
            <list string="ประวัติสินทรัพย์" create="0" delete="0" edit="0">
                <field name="asset_id"/>
                <field name="last_modify_action"/>
                <field name="last_modified_date"/>
                <field name="invoice_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_asset_history_record_form" model="ir.ui.view">
        <field name="name">asset.history.record.form</field>
        <field name="model">asset.history.record</field>
        <field name="arch" type="xml">
            <form string="ประวัติสินทรัพย์" create="0" delete="0" edit="0">
                <sheet>
                    <div class="oe_title">
                        <label for="asset_id" class="oe_edit_only"/>
                        <h1>
                            <field name="asset_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="last_modify_action" readonly="1"/>
                            <field name="last_modified_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Related Invoices">
                            <field name="invoice_ids" readonly="1" widget="many2many">
                                <list>
                                    <field name="name"/>
                                    <field name="invoice_date"/>
                                    <field name="state"/>
                                    <field name="amount_total"/>
                                </list>
                            </field>
                        </page>
                        <page string="Note">
                            <field name="note" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_asset_history_record" model="ir.actions.act_window">
        <field name="name">ประวัติการหยุดใช้สินทรัพย์</field>
        <field name="res_model">asset.history.record</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_asset_history_record" parent="account.menu_finance_entries" action="action_asset_history_record" sequence="57"/>
</odoo>