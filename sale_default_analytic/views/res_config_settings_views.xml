<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.default.analytic</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='sale_management']" position="inside">
                <block title="Analytic Accounting" id="sale_analytic_settings">
                    <setting id="sale_default_analytic_setting"
                        help="Set a default analytic account for all sale order lines.">
                        <field name="sale_default_analytic_account_id" />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>