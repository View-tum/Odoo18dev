<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_groups_form_inherit_stages" model="ir.ui.view">
        <field name="name">res.groups.form.inherit.stages</field>
        <field name="model">res.groups</field>
        <field name="inherit_id" ref="base.view_groups_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='notes']" position="before">
                <page string="Approval Status" name="approval_status">
                    <field name="approval_config_ids"/>
                </page>
            </xpath>

        </field>
    </record>

</odoo>