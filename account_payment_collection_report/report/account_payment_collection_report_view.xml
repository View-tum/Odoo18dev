<odoo>
  <record id="view_account_payment_collection_report_form" model="ir.ui.view">
    <field name="name">account.payment.collection.report.form</field>
    <field name="model">account.payment.collection.report</field>
    <field name="arch" type="xml">

      <form string="Payment Collection Report">
        <group name="payment collection report">

          <group name="details_filters">
            <separator string="Filter Details"/>
            <field name="route_id" force_save="1" readonly="customer_ids" required="not route_id and not customer_ids"/>
            <field name="subregion_ids" force_save="1" widget="many2many_tags" readonly="not route_id" required="route_id"/>
            <field name="customer_ids" force_save="1" widget="many2many_tags" readonly="route_id" required="not route_id and not customer_ids"/>
          </group>

          <group name="details_fields">
            <separator string="Date range and report settings"/>
            <label for="select_month" string="Select Period (Month/Year)"/>
            <div class="o_row">
              <field name="select_month" force_save="1" nolabel="1" placeholder="Select Month"/>
              <field name="select_year" force_save="1" nolabel="1" placeholder="Select Year"/>
            </div>
            <field name="date_from" force_save="1" required="1"/>
            <field name="date_to" force_save="1" required="1"/>
            <field name="unprinted_only" force_save="1"/>
            <field name="report_id" force_save="1" required="1"/>
          </group>
        </group>

        <footer>
          <button string="Print PDF" name="action_print_pdf" type="object" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>