<odoo>
    <record id="hr_expense_view_form" model="ir.ui.view">
        <field name="name">hr.expense.view.form</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group
                    name="tax"
                    string="Tax Details"
                    invisible="not tax_ids and not wht_tax_id"
                >
                    <field
                        name="bill_partner_id"
                        force_save="1"
                        readonly="not is_editable"
                        title="Vendor related to tax invoice and withholding tax"
                    />
                    <field name="tax_number" />
                    <field name="tax_date" />
                </group>
            </xpath>
            <xpath expr="//field[@name='tax_ids']" position="attributes">
                <attribute name="readonly">advance or not is_editable</attribute>
                <attribute name="groups" />
            </xpath>
            <xpath expr="//label[@for='tax_ids']" position="before">
                <field
                    name="wht_tax_id"
                    options="{'no_create': True}"
                    readonly="advance or not is_editable"
                />
            </xpath>
            <!-- <xpath expr="//field[@name='payment_mode']" position="attributes">
                <attribute
                    name="attrs"
                >{'readonly': ['|', ('advance', '=', True), ('state', 'in', ['done', 'approved', 'reported'])]}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath> -->
        </field>
    </record>

    <record id="view_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">view.hr.expense.sheet.form</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form" />
        <field name="arch" type="xml">
            <button name="action_register_payment" position="before">
                <field name="need_wht_entry" invisible="1" />
                <button
                    name="action_create_withholding_tax_entry"
                    type="object"
                    class="oe_highlight"
                    invisible="state not in ('post', 'done') or not need_wht_entry"
                    string="Create Withholding Tax JV"
                    groups="account.group_account_invoice"
                />
            </button>
            <xpath expr="//button[@name='action_open_account_moves']" position="after">
                <button
                    name="action_open_wht_move"
                    class="oe_stat_button"
                    icon="fa-file-text-o"
                    type="object"
                    invisible="state not in ('post', 'done') or not wht_move_id"
                    groups="account.group_account_invoice,account.group_account_readonly"
                >
                    WHT
                </button>
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/list/field[@name='tax_ids']"
                position="after"
            >
                <field
                    name="wht_tax_id"
                    options="{'no_create': True}"
                    optional="show"
                    readonly="advance"
                    force_save="1"
                />
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/list/field[@name='tax_ids']"
                position="attributes"
            >
                <attribute name="readonly">advance</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/list/field[@name='date']"
                position="before"
            >
                <field name="bill_partner_id" optional="show" />
            </xpath>
            <xpath
                expr="//field[@name='expense_line_ids']/list/field[@name='date']"
                position="after"
            >
                <field name="product_id" optional="hide" />
            </xpath>
        </field>
    </record>
</odoo>
