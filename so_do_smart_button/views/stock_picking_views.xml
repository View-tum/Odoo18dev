<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_picking_form_inherit_so_button" model="ir.ui.view">
    <field name="name">stock.picking.form.so.smart.button</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet//div[@name='button_box']" position="inside">
        <button
          name="action_view_sale_orders"
          type="object"
          class="oe_stat_button"
          icon="fa-shopping-cart"
          invisible="sale_smart_button_count == 0">
          <field name="sale_smart_button_count" widget="statinfo" string="Sales Orders"/>
        </button>
      </xpath>
    </field>
  </record>
</odoo>
