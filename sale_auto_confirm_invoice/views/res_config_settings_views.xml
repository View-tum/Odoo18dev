<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_sale_auto_confirm_invoice" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.auto.confirm.invoice</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='invoicing_setting_container']" position="inside">
                <setting id="downpayment_account_setting"
                         string="Down Payment Accounting"
                         help="Use a specific account when creating down payment invoices.">
                    <label for="downpayment_account_id" class="o_light_label"/>
                    <field name="downpayment_account_id"
                           class="oe_inline"
                           options="{'no_create_edit': True}"/>
                    <div class="text-muted">
                        Applied when the down payment is created either by percentage or fixed amount.
                    </div>
                </setting>
                <setting id="mobile_invoice_accounts_setting"
                         string="Mobile Warehouse Invoicing"
                         help="Accounts used when invoicing sales linked to the Mobile Warehouse.">
                    <group>
                        <field name="cash_account_id" colspan="2" options="{'no_create_edit': True}"/>
                        <field name="cheque_and_bank_account_id" colspan="2" options="{'no_create_edit': True}"/>
                    </group>
                    <div class="text-muted mt-2">
                        Pick accounts to use for cash or cheque/bank transfer when invoicing Mobile Warehouse orders.
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
